import 'dart:io';
import 'dart:math';

void main() {

    print("=================================");
    print("||      GAME TEBAK ANGKA       ||");
    print("||         ----------          ||");
    print("||  Tebak angka antara 1-100   ||");
    print("||  Kesempatan berdasar Level  ||");
    print("=================================");

    int target = Random().nextInt(100) + 1;
    int percobaan = 0;
    bool benar = false;

    while (percobaan < 7 && !benar) {
        stdout.write("Tebakan ke-${percobaan + 1}: ");
        int tebakan = int.parse(stdin.readLineSync()!);
        percobaan++;
        if (tebakan == target) {
        print("ðŸŽ‰ Selamat tebakan anda benar dalam $percobaan percobaan ðŸŽ‰");
        benar = true;
        } else {
        print("Tebakan kamu salah");
        }
    }
    if (!benar) {
    print("\nSayang sekali, kamu gagal menebak");
    print("Jawaban yang benar adalah: $target");
    }
}